<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate SQL File Appender -->
    <appender name="HIBERNATE_SQL_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/hibernate-sql.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate SQL Logger -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="HIBERNATE_SQL_FILE" />
    </logger>

    <!-- Hibernate Parameters Logger -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="HIBERNATE_SQL_FILE" />
    </logger>

    <!-- Root Logger for General Logs -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
